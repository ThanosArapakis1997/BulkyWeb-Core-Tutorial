<!DOCTYPE html>
<html lang="en">
@model List<Concert>
<head>
    <title>Concerts</title>
</head>

<body>

    <header>
        <h2>Συναυλίες</h2>
    </header>
    <div class="container">
        <div class="row pt-4">
            <div class="col-4 text-start"><a asp-controller="Concert" asp-action="Create" class="btn btn-primary">Νέα Συναυλία</a></div>
        </div>
    <table>
        <thead>
            <tr>
                <th>Καλλιτέχνης</th>
                <th>Ημερομηνία</th>
                <th>Χώρος</th>
                <th>Τιμή</th>
                <th></th>
                <th></th>
            </tr>
        </thead>  
        <tbody>
            @foreach (var obj in Model){
                <tr>
                    <td>@obj.Artist.Name</td>
                    <td>@obj.ConcertDate</td>
                    <td>@obj.MusicVenue.Name</td>
                    <td>@obj.Price</td>

                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="Update" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square">Ενημέρωση</i>
                                </a>
                            </div>
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                     <i class="bi bi-trash-fill">Διαγραφή </i>
                                </a>
                            </div>
                        </td>
                </tr>
            }
        </tbody>
    </table>
    </div>

</body>
</html>