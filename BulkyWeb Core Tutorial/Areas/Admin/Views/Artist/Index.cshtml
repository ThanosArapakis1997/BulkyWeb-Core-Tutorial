<!DOCTYPE html>
<html lang="en">
@model List<Artist>
<head>
    <title>Artists</title>
</head>

<body>

    <header>
        <h2>Καλλιτέχνες</h2>
    </header>
    <div class="container">
        <div class="row pt-4">
            <div class="col-4 text-start"><a asp-controller="Artist" asp-action="Create" class="btn btn-primary">Νέος Καλλιτέχνης</a></div>
        </div>
    <table>
        <thead>
            <tr>
                <th>ΟΝΟΜΑ</th>
                <th>URL ΦΩΤΟΓΡΑΦΙΑΣ</th>
                <th>ΠΕΡΙΟΔΟΣ ΕΜΦΑΝΙΣΕΩΝ </th>
                <th> </th>
                <th> </th>
            </tr>
        </thead>  
        <tbody>
            @foreach (var obj in Model){
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.ImageUrl</td>
                    <td>@obj.Period</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="Update" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square">Ενημέρωση</i>
                                </a>
                            </div>
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                     <i class="bi bi-trash-fill">Διαγραφή </i>
                                </a>
                            </div>
                        </td>
                </tr>
            }
        </tbody>
    </table>
    </div>

</body>
</html>