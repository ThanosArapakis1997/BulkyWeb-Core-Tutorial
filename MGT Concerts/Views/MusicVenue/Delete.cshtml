@model MusicVenue
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
    <div class="row">
        <div class="col-12 text-center">
                <h2 class="text-white py-2">Διαγραφή Χώρου</h2>
        </div>
    </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-4">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" disabled class="form-control border-0 shadow" />
                    <label asp-for="Name" class="ms-2">Όνομα</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Location" disabled class="form-control border-0 shadow" />
                    <label asp-for="Location" class="ms-2">Τοποθεσία</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Capacity" disabled class="form-control border-0 shadow" />
                    <label asp-for="Capacity" class="ms-2">Χωρητικότητα</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" disabled class="form-control border-0 shadow" />
                    <label asp-for="Description" class="ms-2">Περιγραφή</label>
                </div>
                 <div class="form-floating py-2 col-12">
                    <input asp-for="AvailableFrom" disabled class="form-control border-0 shadow" />
                    <label asp-for="AvailableFrom" class="ms-2">Διαθέσιμο Από</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="AvailableTo" disabled class="form-control border-0 shadow" />
                    <label asp-for="AvailableTo" class="ms-2">Διαθέσιμο Μέχρι</label>
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Διαγραφή</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="MusicVenue" asp-action="Index" class="btn btn-secondary border  form-control">
                             Επιστροφή στη Λίστα
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>
